<?xml version="1.0" encoding="UTF-8" standalone="no" ?><ex4D:plugin xmlns:ex4D="http://www.4d.com/plugin">  <!--Source Highlight-->  <ex4D:documentation name="Source Highlight" plugin-id="20000">    <ex4D:plugin-description>      <!-- write documentation for Source Highlight here -->	  <p>Convert source code from plain text to HTML. Supports  major programming languages inculding 4D v14 (English and French).</p>    </ex4D:plugin-description>    <ex4D:commands>      <ex4D:command-group command-group-id="1" name="source-highlight">        <ex4D:command command-id="1" name="CODE HIGHLIGHT">          <ex4D:command-description>            <!-- write documentation for CODE HIGHLIGHT here -->			<p>Convert source code from plain text to HTML.</p>          </ex4D:command-description>          <ex4D:argument argument-id="1" label="inCode" type="T">            <!-- write documentation for $1 (TEXT) here-->			<p>The source code in plain text. Line delimiter should be LF.</p>			          </ex4D:argument>          <ex4D:argument argument-id="2" label="outCode" type="T">            <!-- write documentation for $2 (TEXT) here-->			<p>The code converted to HTML.</p>          </ex4D:argument>          <ex4D:argument argument-id="3" label="inLang" type="T">            <!-- write documentation for $3 (TEXT) here-->			<p>Input language specifier. Default is &quot;4d&quot;.</p>			<p>See content of Resources/source-highlight for list of supported languages.</p>			<p>You can also add/edit these files to extent the library.</p>          </ex4D:argument>          <ex4D:argument argument-id="4" label="outLang" type="T">            <!-- write documentation for $4 (TEXT) here-->			<p>Output language specifier. Default is &quot;html&quot;.</p>          </ex4D:argument>        </ex4D:command>      </ex4D:command-group>      <ex4D:command-group command-group-id="2" name="preferences">        <ex4D:command command-id="2" name="CODE GET LANGUAGE LIST">          <ex4D:command-description>            <!-- write documentation for CODE GET LANGUAGE LIST here -->			<p>Returns the list of supported languages.</p>          </ex4D:command-description>          <ex4D:argument argument-id="1" label="languages" type="Y">            <!-- write documentation for $1 (ARRAY) here-->			          </ex4D:argument>        </ex4D:command>        <ex4D:command command-id="3" name="CODE Set language folder">          <ex4D:command-description>            <!-- write documentation for CODE Set language folder here -->			<p>Change the languges folder. Default is Resources/source-highlight inside the plugin.</p>          </ex4D:command-description>          <ex4D:argument argument-id="1" label="path" type="T">            <!-- write documentation for $1 (TEXT) here-->          </ex4D:argument>          <ex4D:return-value label="success" type="L">            <!-- write documentation for return value (LONGINT) here-->			<p>1 on success. If the folder does not contain any language files, revert to default and returns 0.</p>			<p>On Windows, the API is ANSI not Unicode i.e. avoid characters not supported in the current locale.</p>          </ex4D:return-value>        </ex4D:command>        <ex4D:command command-id="4" name="CODE Get language folder">          <ex4D:command-description>            <!-- write documentation for CODE Get language folder here -->			<p>Returns the languges folder. Default is Resources/source-highlight inside the plugin.</p>          </ex4D:command-description>          <ex4D:return-value label="path" type="T">            <!-- write documentation for return value (TEXT) here-->			          </ex4D:return-value>        </ex4D:command>      </ex4D:command-group>    </ex4D:commands>  </ex4D:documentation></ex4D:plugin>